<?xml version="1.0" encoding="UTF-8"?>

<plugin>

	<description></description>
	<groupId>solidbase</groupId>
	<artifactId>solidbase</artifactId>
	<version>1.5.0</version>
	<goalPrefix>solidbase</goalPrefix>
	<isolatedRealm>false</isolatedRealm>
	<inheritedByDefault>true</inheritedByDefault>
	
	<mojos>
		<mojo>
			<goal>upgrade</goal>
			<description></description>
			<requiresDirectInvocation>false</requiresDirectInvocation>
			<requiresProject>true</requiresProject>
			<requiresReports>false</requiresReports>
			<aggregator>false</aggregator>
			<requiresOnline>false</requiresOnline>
			<inheritedByDefault>true</inheritedByDefault>
			<phase>process-resources</phase>
			<implementation>solidbase.maven.UpgradeMojo</implementation>
			<language>java</language>
			<instantiationStrategy>per-lookup</instantiationStrategy>
			<executionStrategy>once-per-session</executionStrategy>
			<parameters>
				<parameter>
					<name>downgradeallowed</name>
					<type>boolean</type>
					<required>false</required>
					<editable>true</editable>
					<description>Target to upgrade the database to.</description>
				</parameter>
				<parameter>
					<name>driver</name>
					<type>java.lang.String</type>
					<required>true</required>
					<editable>true</editable>
					<description>Database driver class.</description>
				</parameter>
				<parameter>
					<name>password</name>
					<type>java.lang.String</type>
					<required>true</required>
					<editable>true</editable>
					<description>Database password.</description>
				</parameter>
				<parameter>
					<name>project</name>
					<type>org.apache.maven.project.MavenProject</type>
					<required>true</required>
					<editable>false</editable>
					<description>The Maven Project Object</description>
				</parameter>
				<parameter>
					<name>target</name>
					<type>java.lang.String</type>
					<required>true</required>
					<editable>true</editable>
					<description>Target to upgrade the database to.</description>
				</parameter>
				<parameter>
					<name>upgradefile</name>
					<type>java.lang.String</type>
					<required>true</required>
					<editable>true</editable>
					<description>File containing the upgrade.</description>
				</parameter>
				<parameter>
					<name>url</name>
					<type>java.lang.String</type>
					<required>true</required>
					<editable>true</editable>
					<description>Database URL.</description>
				</parameter>
				<parameter>
					<name>user</name>
					<type>java.lang.String</type>
					<required>true</required>
					<editable>true</editable>
					<description>Database user.</description>
				</parameter>
			</parameters>
			<configuration>
				<project implementation="org.apache.maven.project.MavenProject">${project}</project>
				<upgradefile implementation="java.lang.String">${upgradefile}</upgradefile>
				<downgradeallowed implementation="boolean">${downgradeallowed}</downgradeallowed>
				<target implementation="java.lang.String">${target}</target>
				<driver implementation="java.lang.String">${driver}</driver>
				<user implementation="java.lang.String">${user}</user>
				<password implementation="java.lang.String">${password}</password>
				<url implementation="java.lang.String">${url}</url>
			</configuration>
		</mojo>
	</mojos>
	
	<dependencies>
		<dependency>
			<groupId>org.apache.maven</groupId>
			<artifactId>maven-plugin-api</artifactId>
			<type>jar</type>
			<version>2.0.8</version>
		</dependency>
		<dependency>
			<groupId>org.apache.maven</groupId>
			<artifactId>maven-project</artifactId>
			<type>jar</type>
			<version>2.0.8</version>
		</dependency>
		<dependency>
			<groupId>org.apache.maven</groupId>
			<artifactId>maven-settings</artifactId>
			<type>jar</type>
			<version>2.0.8</version>
		</dependency>
		<dependency>
			<groupId>org.apache.maven</groupId>
			<artifactId>maven-model</artifactId>
			<type>jar</type>
			<version>2.0.8</version>
		</dependency>
		<dependency>
			<groupId>org.codehaus.plexus</groupId>
			<artifactId>plexus-utils</artifactId>
			<type>jar</type>
			<version>1.4.6</version>
		</dependency>
		<dependency>
			<groupId>org.codehaus.plexus</groupId>
			<artifactId>plexus-container-default</artifactId>
			<type>jar</type>
			<version>1.0-alpha-9-stable-1</version>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<type>jar</type>
			<version>3.8.1</version>
		</dependency>
		<dependency>
			<groupId>classworlds</groupId>
			<artifactId>classworlds</artifactId>
			<type>jar</type>
			<version>1.1-alpha-2</version>
		</dependency>
		<dependency>
			<groupId>org.apache.maven</groupId>
			<artifactId>maven-profile</artifactId>
			<type>jar</type>
			<version>2.0.8</version>
		</dependency>
		<dependency>
			<groupId>org.apache.maven</groupId>
			<artifactId>maven-artifact-manager</artifactId>
			<type>jar</type>
			<version>2.0.8</version>
		</dependency>
		<dependency>
			<groupId>org.apache.maven</groupId>
			<artifactId>maven-repository-metadata</artifactId>
			<type>jar</type>
			<version>2.0.8</version>
		</dependency>
		<dependency>
			<groupId>org.apache.maven</groupId>
			<artifactId>maven-artifact</artifactId>
			<type>jar</type>
			<version>2.0.8</version>
		</dependency>
		<dependency>
			<groupId>org.apache.maven.wagon</groupId>
			<artifactId>wagon-provider-api</artifactId>
			<type>jar</type>
			<version>1.0-beta-2</version>
		</dependency>
		<dependency>
			<groupId>org.apache.maven</groupId>
			<artifactId>maven-plugin-registry</artifactId>
			<type>jar</type>
			<version>2.0.8</version>
		</dependency>
	</dependencies>

</plugin>
